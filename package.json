{
  "name": "pos",
  "version": "1.0.0",
  "description": "An Electron application with React and TypeScript",
  "main": "./out/main/index.js",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noemit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noemit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "postinstall": "electron-builder install-app-deps",
    "dev": "cross-env ELECTRON_DISABLE_SANDBOX=1 electron-vite dev",
    "rebuild:node": "pnpm rebuild better-sqlite3",
    "rebuild:electron": "electron-rebuild -f -w better-sqlite3",
    "db:prepare": "pnpm run rebuild:node && rm -f ./node_modules/better-sqlite3/build/Release/better_sqlite3-node.node && cp ./node_modules/better-sqlite3/build/Release/better_sqlite3.node ./node_modules/better-sqlite3/build/Release/better_sqlite3-node.node && pnpm run rebuild:electron",
    "studio": "cp ./node_modules/better-sqlite3/build/Release/better_sqlite3-node.node ./node_modules/better-sqlite3/build/Release/better_sqlite3.node && drizzle-kit studio",
    "build": "npm run typecheck && electron-vite build",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@tailwindcss/vite": "^4.1.11",
    "better-sqlite3": "^12.2.0",
    "drizzle-orm": "^0.44.3",
    "drizzle-seed": "^0.3.1",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/rebuild": "^4.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.16.5",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.4",
    "electron": "^31.0.1",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.0",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "prettier": "^3.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.5"
  }
}
